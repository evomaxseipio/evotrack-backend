# Application
APP_NAME=EvoTrack
APP_VERSION=1.0.0
ENVIRONMENT=development

# Server
HOST=0.0.0.0
PORT=8000
DEBUG=True

# Database
DATABASE_URL=postgresql://evotrack_user:evotrack_password@postgres:5432/evotrack_db
POSTGRES_USER=evotrack_user
POSTGRES_PASSWORD=evotrack_password
POSTGRES_DB=evotrack_db
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# Security
SECRET_KEY=your-super-secret-key-change-this-in-production-min-32-chars
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080,http://localhost:5173

# File Upload
MAX_UPLOAD_SIZE=10485760  # 10MB in bytes
UPLOAD_DIR=./uploads

# Logging
LOG_LEVEL=INFO
